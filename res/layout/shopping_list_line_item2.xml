<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
                android:orientation="horizontal">
    <TextView
        android:id="@+id/shopping_list_line_item_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="2dp"
        android:textSize="16sp"
        android:layout_weight="1"
        android:layout_marginLeft="5dip">
    </TextView>
    <TextView
        android:id="@+id/shopping_list_line_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="2dp"
        android:textSize="8sp"
        android:layout_marginLeft="5dip"
        android:gravity="top"
        android:layout_weight="0"
    >
    </TextView>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/shopping_list_line_item_relative_layout"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="2dp"
            android:textSize="20sp"
            android:text="$"
            android:id="@+id/shopping_list_line_item_dollar_sign"
            android:layout_marginLeft="5dip">
        </TextView>
        <TextView
            android:id="@+id/shopping_list_line_item_cost"
            android:layout_width="90sp"
            android:layout_height="fill_parent"
            android:padding="2dp"
            android:textSize="16sp"
            android:layout_toRightOf="@id/shopping_list_line_item_dollar_sign">
        </TextView>
    </RelativeLayout>
</LinearLayout>

